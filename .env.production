# Production Environment Configuration for Supabase MCP Server
# Copy this file to .env and update with your actual values

# === MCP SERVER CONFIGURATION ===
# Required: Supabase connection details
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Optional: Logging configuration
LOG_LEVEL=INFO

# === SELF-HOSTED SUPABASE CONFIGURATION (Optional) ===
# Only needed if you're self-hosting Supabase with this deployment

# Database Configuration
POSTGRES_DB=supabase
POSTGRES_USER=supabase
POSTGRES_PASSWORD=your-super-secure-postgres-password
POSTGRES_PORT=5432

# API Configuration
API_EXTERNAL_URL=http://localhost:8000
SUPABASE_PUBLIC_URL=http://localhost:8000

# JWT Configuration
JWT_SECRET=your-jwt-secret-at-least-32-characters-long
JWT_EXPIRY=3600
ANON_KEY=your-anon-key-here
SERVICE_ROLE_KEY=your-service-role-key-here

# Auth Configuration
SITE_URL=http://localhost:3000
ADDITIONAL_REDIRECT_URLS=""
DISABLE_SIGNUP=false
ENABLE_EMAIL_SIGNUP=true
ENABLE_EMAIL_AUTOCONFIRM=false

# Email Configuration (Optional)
SMTP_ADMIN_EMAIL=admin@example.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_SENDER_NAME=Your App Name

# Email URL Paths
MAILER_URLPATHS_INVITE=/auth/v1/verify
MAILER_URLPATHS_CONFIRMATION=/auth/v1/verify
MAILER_URLPATHS_RECOVERY=/auth/v1/verify
MAILER_URLPATHS_EMAIL_CHANGE=/auth/v1/verify

# Studio Configuration
STUDIO_DEFAULT_ORGANIZATION=Default Organization
STUDIO_DEFAULT_PROJECT=Default Project
STUDIO_PORT=3000

# Kong Configuration
KONG_HTTP_PORT=8000
KONG_HTTPS_PORT=8443

# PostgREST Configuration
PGRST_DB_SCHEMAS=public,storage,graphql_public

# === DEPLOYMENT CONFIGURATION ===
# Docker Configuration
COMPOSE_PROJECT_NAME=supabase-mcp
DOCKER_BUILDKIT=1

# Network Configuration
NETWORK_SUBNET=172.20.0.0/16

# Volume Configuration
POSTGRES_DATA_PATH=./data/postgres
LOGS_PATH=./logs

# Security Configuration
CONTAINER_USER_ID=1001
CONTAINER_GROUP_ID=1001

# === CLOUD DEPLOYMENT SPECIFIC ===
# Domain Configuration (for production)
DOMAIN_NAME=your-domain.com
SSL_EMAIL=your-email@example.com

# Monitoring Configuration
ENABLE_MONITORING=true
METRICS_PORT=9090

# Backup Configuration
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=7

# === EXAMPLE VALUES (DO NOT USE IN PRODUCTION) ===
# POSTGRES_PASSWORD=super_secure_password_change_me_123!
# JWT_SECRET=super-secret-jwt-token-with-at-least-32-characters-abcd1234
# ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
# SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
